<!DOCTYPE html>
<html>
<head>
    <title>Filtered Event</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            row-gap: 20px;
            align-items: center;
            text-align: center;
            justify-content: space-around;
        }
        
        h1 {
            color: #333;
        }
        
        form {
            margin-bottom: 20px;
        }
        
        label {
            display: inline-block;
            width: 100px;
        }
        
        select, input {
            padding: 5px;
            margin: 5px 0;
        }
        
        button {
            padding: 5px 10px;
            background-color: #007BFF;
            color: white;
            border: none;
            cursor: pointer;
        }
        
        button:hover {
            background-color: #0056b3;
        }
        
        img {
            max-width: 100%;
            height: 400px;
            margin: 10px 0;
        }
        
    </style>
</head>
<body>
    <h1>Filtered Event</h1>
    <% if (imagePaths.length > 0) { %>
        <% imagePaths.forEach(imagePath => { %>
            <img src="<%= imagePath %>" alt="Event Image">
        <% }); %>
    <% } else { %>
        <p>No images found for the given filters.</p>
    <% } %>
    <br>
    <a href="/filter">Back to Filters</a>
</body>
</html>
